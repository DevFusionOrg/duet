{
  "rules": {
    ".read": false,
    ".write": false,
    "activeCalls": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "callSignals": {
      "$callId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "callHistory": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "userCallHistory": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "callEvents": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "status": {
      "$userId": {
        ".read": "auth != null",
        "sessions": {
          "$sessionId": {
            ".write": "auth != null && auth.uid == $userId",
            ".read": "auth != null"
          }
        }
      }
    }
  }
}
